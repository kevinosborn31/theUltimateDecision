<%= form_for @review do |f| %>
<br>
<%= f.label :restaurant %>
<%= f.text_field :restaurant, :value => @restaurant.name %>
<br>
<br>
<%= f.label :rating %>
<br>
<%= f.radio_button :rating, "1" %> 1 <br />
<%= f.radio_button :rating, "2" %> 2 <br />
<%= f.radio_button :rating, "3" %> 3 <br />
<%= f.radio_button :rating, "4" %> 4 <br />
<%= f.radio_button :rating, "5" %> 5 <br />
<br>

<%= f.label :comment %>
<%= f.text_field :comment %>
<br>
<br>
<%= f.submit %>
<% end %>
